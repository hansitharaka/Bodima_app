<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleForm"
    android:background="@drawable/bgdark">

    <ScrollView
        android:id="@+id/scrollHouseForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--                title-->
                <LinearLayout
                    android:id="@+id/titlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/title_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/title_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/title"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <!--                city-->
                <LinearLayout
                    android:id="@+id/citylayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/city_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/city_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                type-->
                <LinearLayout
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    tools:layout_editor_absoluteX="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/typetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/type"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:id="@+id/vtypepinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_rounded_rectangle"
                        android:layout_marginTop="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <Spinner
                            android:id="@+id/pickVtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/type_id"
                            android:backgroundTint="@color/colorPrimaryDark"/>

                    </LinearLayout>

                </LinearLayout>

                <!--                Condition-->
                <LinearLayout
                        android:id="@+id/Condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="16dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/conditiontxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="10dp"
                            android:text="@string/condition_label"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            app:autoSizeTextType="uniform" />

                        <LinearLayout
                            android:id="@+id/conditionspinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_rounded_rectangle"
                            android:layout_marginTop="5dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <Spinner
                                android:id="@+id/pickVcondition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/condition_id"
                                android:backgroundTint="@color/colorPrimaryDark"/>

                        </LinearLayout>




                    </LinearLayout>

                <!--                Fuel-->
                <LinearLayout
                        android:id="@+id/Fuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="16dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/fueltxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="10dp"
                            android:text="@string/fuel_label"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            app:autoSizeTextType="uniform" />

                        <LinearLayout
                            android:id="@+id/fuelspinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_rounded_rectangle"
                            android:layout_marginTop="5dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <Spinner
                                android:id="@+id/pickVfuel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/fuel_id"
                                android:backgroundTint="@color/colorPrimaryDark"/>

                        </LinearLayout>



                    </LinearLayout>

                <!--                brand-->
                <LinearLayout
                    android:id="@+id/brandlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/brand_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/brandlabel"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/brandlabel"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                model-->
                <LinearLayout
                    android:id="@+id/modellayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/model_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/modellabel"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/modellabel"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                description-->
                <LinearLayout
                    android:id="@+id/descLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/desc_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/description_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="top"
                        android:hint="@string/desc_txt"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:minLines="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                amount-->
                <LinearLayout
                    android:id="@+id/amountLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/amnt_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/amnt"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:id="@+id/payLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/RS_label"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="@string/amount_rs"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            app:autoSizeTextType="uniform" />

                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/dimgray"
                            android:fontFamily="@font/light"
                            android:hint="@string/amount_txt"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:paddingTop="10dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/gray"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                </LinearLayout>

                <!--                facility-->
                <LinearLayout
                    android:id="@+id/facilityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <LinearLayout
                        android:id="@+id/facilityLayoutLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bedlabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="10dp"
                            android:text="@string/beds_label"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/bathlabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:gravity="center_horizontal|center_vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingBottom="10dp"
                            android:text="@string/baths_label"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/facilityLayoutedit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/beds_num"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/dimgray"
                            android:ems="10"
                            android:fontFamily="@font/light"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="@string/beds_num"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            app:autoSizeTextType="uniform" />

                        <EditText
                            android:id="@+id/baths_num"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/dimgray"
                            android:drawableTint="@color/dimgray"
                            android:ems="10"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="@string/baths_num"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                </LinearLayout>

                <!--                Name-->
                <LinearLayout
                    android:id="@+id/addressName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/name_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="top"
                        android:hint="@string/name_here"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:minLines="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                phone number-->
                <LinearLayout
                    android:id="@+id/phonelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/phone_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/phone_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                buttons-->
                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="16dp">

                    <Button
                        android:id="@+id/addImg"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:fontFamily="@font/medium"
                        android:padding="15dp"
                        android:text="@string/btnImg"
                        android:textColor="@color/colorPrimaryDark"
                        app:autoSizeTextType="uniform"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:backgroundTint="@color/colorPink"
                        android:fontFamily="@font/medium"
                        android:padding="15dp"
                        android:text="@string/btnSave"
                        android:textColor="@color/colorPrimaryDark"
                        app:autoSizeTextType="uniform"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>