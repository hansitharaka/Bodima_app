<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandForm"
    android:background="@drawable/bgdark">

    <ScrollView
        android:id="@+id/scrollHouseForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--                title-->
                <LinearLayout
                    android:id="@+id/titlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/title_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/title_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/title"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <!--                city-->
                <LinearLayout
                    android:id="@+id/citylayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/city_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/city_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                land size-->
                <LinearLayout
                    android:id="@+id/landSlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/landS_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="Land Size (Perches)"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/landS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/ad_land_size"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                description-->
                <LinearLayout
                    android:id="@+id/descLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/desc_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/description_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="top"
                        android:hint="@string/desc_txt"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:minLines="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                amount-->
                <LinearLayout
                    android:id="@+id/amountLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/amnt_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/amnt"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:id="@+id/payLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/RS_label"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="@string/amount_rs"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            app:autoSizeTextType="uniform" />

                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/dimgray"
                            android:fontFamily="@font/light"
                            android:hint="@string/amount_txt"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:paddingTop="10dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/gray"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                </LinearLayout>

                <!--                Name-->
                <LinearLayout
                    android:id="@+id/addressName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/name_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="top"
                        android:hint="@string/name_here"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:minLines="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <!--                phone number-->
                <LinearLayout
                    android:id="@+id/phonelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/phone_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/medium"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/phone_label"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:autoSizeTextType="uniform" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/light"
                        android:gravity="center_vertical"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>


                <!--                img display-->
                <LinearLayout
                    android:id="@+id/imagesLayout"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:background="@color/bgdarkPurple"
                        android:scaleType="centerCrop" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                </LinearLayout>



                <!--                buttons-->
                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="16dp">

                    <Button
                        android:id="@+id/addImg"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:fontFamily="@font/medium"
                        android:padding="15dp"
                        android:text="@string/btnImg"
                        android:textColor="@color/colorPrimaryDark"
                        app:autoSizeTextType="uniform"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:backgroundTint="@color/colorPink"
                        android:fontFamily="@font/medium"
                        android:padding="15dp"
                        android:text="@string/btnSave"
                        android:textColor="@color/colorPrimaryDark"
                        app:autoSizeTextType="uniform"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>