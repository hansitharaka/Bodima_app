<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPlaces"
    android:background="@color/bgdarkPurple">

    <!--    Floating Add Button   -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPlaceFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPink"
        android:clickable="true"
        android:contentDescription="@string/add_place"
        android:focusable="true"
        android:rotationY="180"
        android:tint="@color/colorPrimaryDark"
        app:elevation="6dp"
        app:maxImageSize="30dp"
        app:srcCompat="@drawable/plusicon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!--Places Card-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/ashyPurple"
                android:orientation="vertical"
                app:cardCornerRadius="20dp"
                android:layout_marginBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constrain_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgHouseAd"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@color/colorPrimaryDark"
                        android:contentDescription="@string/placeimg"
                        android:elevation="10dp"
                        android:scaleType="fitXY"
                        android:layout_margin="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/img2" />

                    <LinearLayout
                        android:id="@+id/house_card"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgHouseAd"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/bold"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/title_display"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp" />

                        <!-- City -->
                        <TextView
                            android:id="@+id/city"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/medium"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/city_name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <!-- Facility -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp">

                            <TextView
                                android:id="@+id/beds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/bed"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:text="@string/beds_no"
                                android:textAlignment="gravity"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/baths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/bath"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:text="@string/baths_no"
                                android:textAlignment="gravity"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                        <!-- Price -->
                        <TextView
                            android:id="@+id/placePrice"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/bold"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="10dp"
                            android:text="@string/price"
                            android:textColor="@color/colorPink"
                            android:textSize="18sp" />

                        <!-- Date -->
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/medium"
                            android:textStyle="italic"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/postDate"
                            android:textColor="@color/dimgray"
                            android:textSize="12sp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>








    </ScrollView>

</RelativeLayout>