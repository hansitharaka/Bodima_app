<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyReminders"
    android:background="@drawable/bgdark">

    <!--    Floating Add Button   -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPink"
        android:clickable="true"
        android:contentDescription="@string/add_reminder"
        android:focusable="true"
        android:rotationY="180"
        android:tint="@color/colorPrimaryDark"
        app:elevation="6dp"
        app:maxImageSize="30dp"
        app:srcCompat="@drawable/plusicon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                app:tabIndicator="@drawable/button"
                app:tabIndicatorColor="@color/colorPink"
                app:tabIndicatorGravity="stretch"
                app:tabSelectedTextColor="@color/colorPrimaryDark"
                app:tabTextColor="@color/gray">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other" />
            </com.google.android.material.tabs.TabLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:backgroundTint="@color/ashyPurple"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constrain_expense1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                        <!--Description-->
                        <TextView
                            android:id="@+id/desclabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reminder_desc"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/medium"
                            android:padding="10dp"
                            android:autoSizeTextType="uniform"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/linear"/>

                    <!--Date and Payment-->
                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/desclabel">

                        <!--Date-->
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/medium"
                            android:padding="10dp"
                            android:autoSizeTextType="uniform"/>

                        <!--Payment-->
                        <TextView
                            android:id="@+id/amount_ex_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ex_amount"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/bold"
                            android:padding="10dp"
                            android:autoSizeTextType="uniform"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>